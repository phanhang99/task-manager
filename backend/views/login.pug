doctype html
html.loading(lang='en' data-textdirection='ltr')
  // BEGIN: Head
  head
    meta(http-equiv='Content-Type' content='text/html; charset=UTF-8')
    meta(http-equiv='X-UA-Compatible' content='IE=edge')
    meta(name='viewport' content='width=device-width, initial-scale=1.0, user-scalable=0, minimal-ui')
    meta(name='description' content='Stack admin is super flexible, powerful, clean & modern responsive bootstrap 4 admin template with unlimited possibilities.')
    meta(name='keywords' content='admin template, stack admin template, dashboard template, flat admin template, responsive admin template, web app')
    meta(name='author' content='PIXINVENT')
    title Login with Background Color - Stack Responsive Bootstrap 4 Admin Template
    link(rel='apple-touch-icon' href='/images/apple-icon-120.png')
    link(rel='shortcut icon' type='image/x-icon' href='/images/favicon.ico')
    link(href='https://fonts.googleapis.com/css?family=Montserrat:300,300i,400,400i,500,500i%7COpen+Sans:300,300i,400,400i,600,600i,700,700i' rel='stylesheet')
    // BEGIN: Vendor CSS
    link(rel='stylesheet' type='text/css' href='/css/vendors.min.css')
    link(rel='stylesheet' type='text/css' href='/css/icheck.css')
    link(rel='stylesheet' type='text/css' href='/css/custom.css')
    // END: Vendor CSS
    // BEGIN: Theme CSS
    link(rel='stylesheet' type='text/css' href='/css/bootstrap.min.css')
    link(rel='stylesheet' type='text/css' href='/css/bootstrap-extended.min.css')
    link(rel='stylesheet' type='text/css' href='/css/colors.min.css')
    link(rel='stylesheet' type='text/css' href='/css/components.min.css')
    // END: Theme CSS
    // BEGIN: Page CSS
    link(rel='stylesheet' type='text/css' href='/css/vertical-menu-modern.css')
    link(rel='stylesheet' type='text/css' href='/css/palette-gradient.min.css')
    link(rel='stylesheet' type='text/css' href='/css/login-register.min.css')
    // END: Page CSS
    // BEGIN: Custom CSS
    link(rel='stylesheet' type='text/css' href='/css/style.css')
    // END: Custom CSS
    // END: Head
    // BEGIN: Body
    body.vertical-layout.vertical-menu-modern.1-column.bg-cyan.bg-lighten-2.blank-page.blank-page(data-open='click' data-menu='vertical-menu-modern' data-col='1-column')
      // BEGIN: Content
      .app-content.content
        .content-overlay
        .content-wrapper
          .content-header.row
          .content-body
            section.row.flexbox-container
              .col-12.d-flex.align-items-center.justify-content-center
                .col-lg-4.col-md-8.col-10.box-shadow-2.p-0
                  .card.border-grey.border-lighten-3.m-0
                    .card-header.border-0
                      .card-title.text-center
                        .p-1
                          img(src='' alt='branding logo')
                      h6.card-subtitle.line-on-side.text-muted.text-center.font-small-3.pt-2
                        span
                          | Easily
                          | Using
                    .card-content
                      .card-body.pt-0.text-center
                        a.btn.btn-social.mb-1.mr-1.btn-outline-facebook(href='#')
                          span.fa.fa-facebook
                          span.px-1 facebook
                        a.btn.btn-social.mb-1.mr-1.btn-outline-google(href='#')
                          span.fa.fa-google-plus.font-medium-4
                          span.px-1 google
                      p.card-subtitle.line-on-side.text-muted.text-center.font-small-3.mx-2
                        span
                          | OR Using
                          | Account Details
                      .card-body.pt-0
                        form.form-horizontal(action='index.html')
                          fieldset.form-group.floating-label-form-group
                            label(for='user-name') Your Email
                            input#email.form-control(type='text' placeholder='Your Email')
                          fieldset.form-group.floating-label-form-group.mb-1
                            label(for='user-password') Enter Password
                            input#user-password.form-control(type='password' placeholder='Enter Password')
                          .form-group.row
                            .col-sm-6.col-12.text-center.text-sm-left
                              fieldset
                                input#remember-me.chk-remember(type='checkbox')
                                label(for='remember-me')  Remember Me
                            .col-sm-6.col-12.float-sm-left.text-center.text-sm-right
                              a.card-link(href='recover-password.html') Forgot Password?
                          button.btn.btn-outline-primary.btn-block(type='submit')
                            i.feather.icon-unlock
                            |  Login
                      p.card-subtitle.line-on-side.text-muted.text-center.font-small-3.mx-2.my-1
                        span
                          | New to
                          | Stack ?
                      .card-body
                        a.btn.btn-outline-danger.btn-block(href='register.html')
                          i.feather.icon-user
                          |  Register
      // END: Content
      // BEGIN: Vendor JS
      script(src='/js/vendors.min.js')
      // BEGIN Vendor JS
      // BEGIN: Page Vendor JS
      script(src='./js/icheck.min.js')
      // END: Page Vendor JS
      // BEGIN: Theme JS
      script(src='/js/app-menu.min.js')
      script(src='/js/app.min.js')
      // END: Theme JS
      // BEGIN: Page JS
      script(src='/js/form-login-register.min.js')
      // END: Page JS
      // END: Body
